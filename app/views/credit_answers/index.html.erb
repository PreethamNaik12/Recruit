<p id="notice"><%= notice %></p>

<h1>Credit Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Credit question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_answers.each do |credit_answer| %>
      <tr>
        <td><%= credit_answer.answer %></td>
        <td><%= credit_answer.credit_question_id %></td>
        <td><%= link_to 'Show', credit_answer %></td>
        <td><%= link_to 'Edit', edit_credit_answer_path(credit_answer) %></td>
        <td><%= link_to 'Destroy', credit_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Answer', new_credit_answer_path %>
