<p id="notice"><%= notice %></p>

<h1>Credit Questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_questions.each do |credit_question| %>
      <tr>
        <td><%= credit_question.title %></td>
        <td><%= link_to 'Show', credit_question %></td>
        <td><%= link_to 'Edit', edit_credit_question_path(credit_question) %></td>
        <td><%= link_to 'Destroy', credit_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Question', new_credit_question_path %>
